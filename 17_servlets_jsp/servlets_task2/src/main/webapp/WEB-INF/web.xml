<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">


	<display-name>Archetype Created Web Application</display-name>
	<!-- Servlets -->
	<servlet>
		<servlet-name>auth</servlet-name>
		<servlet-class>com.nixsolutions.controllers.AuthServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>manageusers</servlet-name>
		<servlet-class>com.nixsolutions.controllers.ManageUsersServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>librarian</servlet-name>
		<servlet-class>com.nixsolutions.controllers.LibrarianServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>findbook</servlet-name>
		<servlet-class>com.nixsolutions.controllers.FindBookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addbook</servlet-name>
		<servlet-class>com.nixsolutions.controllers.AddBookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addreader</servlet-name>
		<servlet-class>com.nixsolutions.controllers.AddReaderServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addcategory</servlet-name>
		<servlet-class>com.nixsolutions.controllers.AddCategoryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loans</servlet-name>
		<servlet-class>com.nixsolutions.controllers.LoansServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loans2</servlet-name>
		<servlet-class>com.nixsolutions.controllers.LoansServlet2</servlet-class>
	</servlet>
<servlet>
		<servlet-name>error</servlet-name>
		<servlet-class>com.nixsolutions.controllers.ErrorServlet</servlet-class>
	</servlet>
<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.nixsolutions.controllers.HomePageServlet</servlet-class>
	</servlet>


	<!-- Servlets mapping -->
	<servlet-mapping>
		<servlet-name>auth</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>manageusers</servlet-name>
		<url-pattern>/manageusers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>librarian</servlet-name>
		<url-pattern>/librarian</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>findbook</servlet-name>
		<url-pattern>/findbook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addbook</servlet-name>
		<url-pattern>/addbook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addreader</servlet-name>
		<url-pattern>/addreader</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addcategory</servlet-name>
		<url-pattern>/addcategory</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>loans</servlet-name>
		<url-pattern>/loans</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>loans2</servlet-name>
		<url-pattern>/loans2</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>error</servlet-name>
		<url-pattern>/error-handler</url-pattern>
	</servlet-mapping>

		<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/homepage</url-pattern>
	</servlet-mapping>
	
	<!-- Welcome page -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- Filters -->
	<filter>
		<filter-name>adminAuth</filter-name>
		<filter-class>com.nixsolutions.filters.AdminAuthFilter</filter-class>
	</filter>

	<!-- Filter Mapping -->
	<filter-mapping>
		<filter-name>adminAuth</filter-name>
		<url-pattern>/manageusers</url-pattern>
	</filter-mapping>

<!-- Errors handling -->
<error-page>
<location>/error-handler</location>
</error-page>

<error-page>
<error-code>404</error-code>
<location>/error-handler</location>
</error-page>

<error-page>
<exception-type>java.lang.UnsupportedOperationException</exception-type>
<location>/error-handler</location>
</error-page>

<error-page>
<exception-type>java.lang.IllegalStateException</exception-type>
<location>/error-handler</location>
</error-page>

<error-page>
<exception-type>java.nio.channels.OverlappingFileLockException</exception-type>
<location>/error-handler</location>
</error-page>

<error-page>
<exception-type>com.nixsolutions.dao.DaoException</exception-type>
<location>/error-handler</location>
</error-page>
</web-app>
