<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">org.h2.Driver</property>
		<property name="connection.url">jdbc:h2:tcp://localhost/~/sqllab</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">20</property>
		<property name="hibernate.connection.autocomit">true</property>
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">validate</property>
		<mapping class="com.nixsolutions.studentgrade.entity.StudentGroup" />
		<mapping class="com.nixsolutions.studentgrade.entity.Status" />
		<mapping class="com.nixsolutions.studentgrade.entity.Term" />
		<mapping class="com.nixsolutions.studentgrade.entity.Student" />
		<mapping class="com.nixsolutions.studentgrade.entity.Subject" />
		<mapping class="com.nixsolutions.studentgrade.entity.Grade" />
		<mapping class="com.nixsolutions.studentgrade.entity.Journal" />
		<mapping class="com.nixsolutions.studentgrade.entity.Role" />
		<mapping class="com.nixsolutions.studentgrade.entity.User" />
	</session-factory>
</hibernate-configuration>