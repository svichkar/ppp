

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/sqllab</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.connection.autocommit">true</property>
        
        <mapping class="com.nixsolutions.hibernate.entity.Author" />
        <mapping class="com.nixsolutions.hibernate.entity.AuthorBook" />     
        <mapping class="com.nixsolutions.hibernate.entity.Book" />
        <mapping class="com.nixsolutions.hibernate.entity.Category" />  
        <mapping class="com.nixsolutions.hibernate.entity.Cell" />
        <mapping class="com.nixsolutions.hibernate.entity.Client" />  
        <mapping class="com.nixsolutions.hibernate.entity.RentJournal" />
        <mapping class="com.nixsolutions.hibernate.entity.Role" />  
        <mapping class="com.nixsolutions.hibernate.entity.User" />
 
    </session-factory>
</hibernate-configuration>