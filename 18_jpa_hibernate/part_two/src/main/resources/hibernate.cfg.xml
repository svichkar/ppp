<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->
		<property name="connection.driver_class">org.h2.Driver</property>
		<property name="connection.url">jdbc:h2:tcp://localhost/~/sqllab;AUTO_SERVER=TRUE</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>
		<property name="default_schema">SQLLAB</property>
		<property name="connection.pool_size">20</property>

		<property name="hbm2ddl.import_files">import.sql</property>
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create</property>
		<mapping class="com.nixsolutions.entities.Customer" />
		<mapping class="com.nixsolutions.entities.Car" />
		<mapping class="com.nixsolutions.entities.OrderInWork" />
		<mapping class="com.nixsolutions.entities.OrderStatus" />
		<mapping class="com.nixsolutions.entities.OrderWorker" />
		<mapping class="com.nixsolutions.entities.Part" />
		<mapping class="com.nixsolutions.entities.PartOrder" />
		<mapping class="com.nixsolutions.entities.Role" />
		<mapping class="com.nixsolutions.entities.Status" />
		<mapping class="com.nixsolutions.entities.User" />
		<mapping class="com.nixsolutions.entities.Worker" />
		<mapping class="com.nixsolutions.entities.WorkerSpecification" />

	</session-factory>


</hibernate-configuration>