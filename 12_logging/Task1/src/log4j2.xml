<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} %method - %msg%n"/>
        </Console>

        <RollingFile name="RollingFile" fileName="myApp.log" filePattern="myApp-$${date:MM-dd-yyyy}.%i.log">
            <PatternLayout>
                <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} %method - %msg%n</pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="100 MB"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
        <logger name="com.manetskiy" level="trace">
            <AppenderRef ref="RollingFile" level="info"/>
        </logger>
    </Loggers>
</Configuration>