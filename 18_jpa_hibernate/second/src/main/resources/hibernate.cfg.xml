<?xml version="1.0" encoding="utf-8"?>
        <!DOCTYPE hibernate-configuration SYSTEM
                "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect"></property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>

        <property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/sqllab;MVCC=true;DB_CLOSE_DELAY=-1</property>

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <property name="hibernate.connection.pool_size">20</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.hbm2ddl.import_files">import.sql</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.autocommit">true</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.nixsolutions.studentgrade.entity.Grade"/>
        <mapping class="com.nixsolutions.studentgrade.entity.User"/>
        <mapping class="com.nixsolutions.studentgrade.entity.Role"/>
        <mapping class="com.nixsolutions.studentgrade.entity.Journal"/>
        <mapping class="com.nixsolutions.studentgrade.entity.Student"/>
        <mapping class="com.nixsolutions.studentgrade.entity.Status"/>
        <mapping class="com.nixsolutions.studentgrade.entity.StudentGroup"/>
        <mapping class="com.nixsolutions.studentgrade.entity.Subject"/>
        <mapping class="com.nixsolutions.studentgrade.entity.Term"/>

</session-factory>

</hibernate-configuration>