<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
         <property name="hibernate.connection.url">jdbc:h2:mem:sqllabtesting</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.connection.autocommit">true</property>
        <property name="current_session_context_class">thread</property> 
        
        <mapping class="com.nixsolutions.entity.Author" />  
        <mapping class="com.nixsolutions.entity.Book" />
        <mapping class="com.nixsolutions.entity.Category" />  
        <mapping class="com.nixsolutions.entity.Cell" />
        <mapping class="com.nixsolutions.entity.Client" />  
        <mapping class="com.nixsolutions.entity.RentJournal" />
        <mapping class="com.nixsolutions.entity.Role" />   
        <mapping class="com.nixsolutions.entity.User" />  
 
    </session-factory>
</hibernate-configuration>