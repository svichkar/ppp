<?xml version="1.0"?>
<project name="MyFirstAntProject" default="Copy" basedir=".">
	<description>Archiving project into jar</description>

	<property file="ant.properties" />
	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="test" location="test" />
	<property name="test.dir" location="test/com/nixsolutionsTests" />


	<path id="junit.class.path">
		<pathelement location="lib/junit-4.12.jar" />
		<pathelement location="lib/hamcrest-core-1.3.jar" />
	</path>


	<target name="init">
		<mkdir dir="${build}" />
	</target>


	<target name="compile" depends="init" description="Compile">
		<echo>Project compilation is in progress</echo>
		<javac srcdir="${src}" destdir="${build}" includeantruntime="false" />
		<mkdir dir="${build}/test" />

		<javac srcdir="${test.dir}" destdir="${build}/test" includeantruntime="false">
			<classpath refid="junit.class.path" />
		</javac>
		<echo>Project compilation is finished</echo>
	</target>


	<target name="dist" depends="compile" description="JAR creation">
		<echo>JAR  creation is in progress</echo>
		<delete dir="${dist}" />
		<mkdir dir="${dist}/lib" />
		<jar destfile="${dist}/lib/AntProj.jar" basedir="${basedir}" />
		<echo>JAR creation is finished</echo>
	</target>

	<target name="junit" depends="dist" description="JUnit Tests execution ">
		<echo>JUnit tests is in progress</echo>

		<junit printsummary="yes" haltonfailure="yes">
			<classpath path="lib/junit-4.12.jar" />
			<classpath path="lib/hamcrest-core-1.3.jar" />
			<classpath>
				<pathelement location="${build}" />
			</classpath>
			<classpath>
				<pathelement location="${build}/test" />
			</classpath>
			<formatter type="xml" />
			<batchtest todir="${basedir}">
				<fileset dir="${test}" />
			</batchtest>
		</junit>
		<echo>JUnit tests - DONE</echo>
	</target>

	<target name="clean" depends="junit" description="Cleaning">
		<echo>Removing temporary folders is in progress</echo>
		<delete dir="${build}" />
		<delete dir="bin" />
		<echo>Removed</echo>
	</target>


	<target name="ZIPer" depends="clean" description="Archive JAR">
		<echo>Archiving jar file into ZIP</echo>
		<zip destfile="${dist}/lib/AntProj.zip" basedir="${dist}/lib/" />
		<echo>Archiving jar completed</echo>
	</target>

	<target name="Copy" depends="ZIPer">
		<echo>Copying report file to temp with name changing</echo>
		<copy file="TEST-com.nixsolutionsTests.newTest.xml" tofile="TEST-com.nixsolutionsTests.newTestTemp.xml" />
		<echo>Copied</echo>
	</target>


</project>