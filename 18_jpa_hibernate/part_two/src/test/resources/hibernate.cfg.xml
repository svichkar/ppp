<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>

        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:sqllab3</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">20</property>

        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.nixsolutions.servicestation.entity.Role"/>
        <mapping class="com.nixsolutions.servicestation.entity.User"/>
        <mapping class="com.nixsolutions.servicestation.entity.Client"/>
        <mapping class="com.nixsolutions.servicestation.entity.CarType"/>
        <mapping class="com.nixsolutions.servicestation.entity.EmployeeCategory"/>
        <mapping class="com.nixsolutions.servicestation.entity.Car"/>
        <mapping class="com.nixsolutions.servicestation.entity.Employee"/>
        <mapping class="com.nixsolutions.servicestation.entity.CarOrderStatus"/>
        <mapping class="com.nixsolutions.servicestation.entity.CarOrder"/>

    </session-factory>
</hibernate-configuration>