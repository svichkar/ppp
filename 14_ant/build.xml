<project name="Ant" basedir="." default="dist">
    <property name="src" location="src"/>
    <property name="test" location="test"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>
    <property name="lib-dir" location="lib"/>
    <property name="report" location="report"/>

    <path id="classpath">
        <fileset dir="${lib-dir}" includes="*.jar"/>
    </path>

    <target name="init" description="initialization">
        <echo message="Initialization has started..."/>
        <mkdir dir="${build}"/>
    </target>

    <target name="compile" depends="init" description="compilation">
        <echo message="Copying 'log4j2.xml' config file..."/>
        <copy todir="${build}" overwrite="true">
            <fileset dir="${src}" includes="log4j2.xml"/>
        </copy>
        <echo message="Starting compilation..."/>
        <javac srcdir="${basedir}" destdir="${build}" includeantruntime="false">
            <classpath>
                <path refid="classpath"/>
            </classpath>
            <include name="${src}\*.java"/>
            <include name="${test}\*.java"/>
        </javac>
        <echo message="Compilation finished..."/>
    </target>

    <target name="dist" depends="compile" description="Distention">
        <echo message="Distention has started..."/>
        <mkdir dir="${dist}"/>
        <jar destfile="${dist}/Hello.jar" basedir="${build}"/>
    </target>

    <target name="test" depends="compile" description="testing">
        <echo message="Testing has started..."/>
        <mkdir dir="${report}"/>
        <junit printsummary="yes" haltonfailure="no">
            <classpath refid="classpath"/>
            <classpath location="${build}"/>

            <!--test name="SingleWithoutMockTest" haltonfailure="no" todir="${report}">
                <formatter type="plain" />
                <formatter type="xml" />
            </test-->

            <formatter type="plain" />
            <formatter type="xml" />
            <batchtest fork="yes" todir="${report}">
                <fileset dir="${test}">
                    <include name="*Test.java" />
                </fileset>
            </batchtest>
        </junit>
    </target>

    <target name="clean" description="Delete all generated files">
        <echo message="Cleaning has started..."/>
        <delete dir="${build}"/>
    </target>

</project>