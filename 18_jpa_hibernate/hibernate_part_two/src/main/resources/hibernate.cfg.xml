<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:file:D:/JavaCourses/javappp/18_jpa_hibernate/hibernate_part_two/target/classes/sqllab;FILE_LOCK=NO</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
		<property name="default_schema">SQLLAB</property>
        <property name="connection.pool_size">20</property>

        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">validate</property>
        <mapping class="com.nixsolutions.hibernate.entity.Role" />
        <mapping class="com.nixsolutions.hibernate.entity.User" />
        <mapping class="com.nixsolutions.hibernate.entity.Customer" />
        <mapping class="com.nixsolutions.hibernate.entity.Part" />
        <mapping class="com.nixsolutions.hibernate.entity.Status" />
        <mapping class="com.nixsolutions.hibernate.entity.WorkerSpecialization" />
        <mapping class="com.nixsolutions.hibernate.entity.OrderStatus" />
        <mapping class="com.nixsolutions.hibernate.entity.Car" />
        <mapping class="com.nixsolutions.hibernate.entity.Worker" />
        <mapping class="com.nixsolutions.hibernate.entity.OrderInWork" />
        <mapping class="com.nixsolutions.hibernate.entity.OrderWorker" />
        <mapping class="com.nixsolutions.hibernate.entity.OrderPart" />

    </session-factory>
    

</hibernate-configuration>