<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
	<Appenders>
		<File name="task1" fileName="logMain.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
		</File>
		<File name="task2" fileName="logMain.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
		</File>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name = "Refl" level="INFO" additivity = "false">
			<AppenderRef ref="task1"/>
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name = "Task2" level="INFO" additivity = "false">
			<AppenderRef ref="task2"/>
			<AppenderRef ref="Console"/>
		</Logger>
	</Loggers>
</Configuration>